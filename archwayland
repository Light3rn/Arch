# Run this script after your first boot with archlinux (as root)
read -p 'Username: ' wantedname
read -p 'Give me installation device letter (ex. just a from /dev/sda): ' diskletter
diskpart="/dev/sd$diskletter"
read -p 'Using UEFI? (1, 0): ' uefi
read -p 'Enlightenment or Gnome? (1 Enlightenment, 2 Gnome): ' wm


if (( $uefi == 1)); then
efipart="${diskpart}1"
linuxpart="${diskpart}2"
else
linuxpart="${diskpart}1"
fi

set -x
loadkeys fi
umount $linuxpart
mkfs.ext4 -F $linuxpart
mount $linuxpart /mnt
if (( $uefi == 1)); then
umount $efipart
mkfs.fat -F32 $efipart
mkdir -p /mnt/boot
mount $efipart /mnt/boot
fi

pacstrap /mnt base

genfstab -U /mnt >> /mnt/etc/fstab
if (( $uefi == 1)); then
genfstab -U /mnt/boot >> /mnt/etc/fstab
fi

arch-chroot /mnt ln -sf /usr/share/zoneinfo/Europe/Helsinki /etc/localtime
arch-chroot /mnt hwclock --systohc
echo $'en_US.UTF-8 UTF-8\nfi_FI.UTF-8 UTF-8' >> /mnt/etc/locale.gen
arch-chroot /mnt locale-gen
arch-chroot /mnt pacman --noconfirm -S grub
if (( $uefi == 1)); then
arch-chroot /mnt grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub
else
arch-chroot /mnt grub-install $diskpart
fi
arch-chroot /mnt grub-mkconfig -o /boot/grub/grub.cfg 

arch-chroot /mnt useradd -m -G wheel -s /bin/bash $wantedname
arch-chroot /mnt pacman --noconfirm -S sudo dialog wpa_supplicant
echo $wantedname" ALL=(ALL) ALL" >> /mnt/etc/sudoers
#echo "127.0.1.1	arch.localdomain	arch" >> /mnt/etc/hosts

arch-chroot /mnt pacman --noconfirm -S weston xorg-server-xwayland firefox networkmanager ntfs-3g qbittorrent
if (( $wm == 1)); then
arch-chroot /mnt pacman --noconfirm -S gnome
arch-chroot /mnt systemctl enable NetworkManager.service
echo $'if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]] && [[ -z $XDG_SESSION_TYPE ]]; then\nXDG_SESSION_TYPE=wayland exec dbus-run-session gnome-session\nfi' >> /mnt/home/$wantedname/.bash_profile
else
arch-chroot /mnt pacman --noconfirm -S enlightenment terminology connman
echo $'if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]] && [[ -z $XDG_SESSION_TYPE ]]; then\nenlightenment_start\nfi' >> /mnt/home/$wantedname/.bash_profile
fi

#cp ./.vimrc /mnt/home/$wantedname/
#arch-chroot /mnt gsettings set org.gnome.desktop.input-sources sources "[('xkb', 'fi')]"
# gsettings list-recursively | grep sources
mkdir -p /mnt/home/$wantedname/Pictures/
cp ./archbackground.jpg /mnt/home/$wantedname/Pictures/
arch-chroot chown -R $wantedname:users /home/$wantedname/

set +x
echo 'Give me root password:'
arch-chroot /mnt passwd
echo 'Give me user password:'
arch-chroot /mnt passwd $wantedname
